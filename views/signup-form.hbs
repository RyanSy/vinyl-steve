<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <h3>Sign Up Form</h3>

    <form class="mb-3" action="/save-dealer-info" method="post">
         <input type="hidden" name="email" value="{{email}}">

        <label for="name">Name</label>
        <div class="form-group mb-3">
            <input type="text" name="name" id="">
        </div>

        <label for="name">Address</label>
        <div class="form-group mb-3">
            <input type="text" name="address" id="">
        </div>

        <label for="name">City</label>
        <div class="form-group mb-3">
            <input type="text" name="city" id="">
        </div>

        <label for="name">State</label>
        <div class="form-group mb-3">
            <input type="text" name="state" id="">
        </div>

        <label for="name">Zip</label>
        <div class="form-group mb-3">
            <input type="text" name="zip" id="">
        </div>

        <label for="name">Phone</label>
        <div class="form-group mb-3">
            <input type="text" name="phone" id="">
        </div>

        <label for="name">Social Media Accounts</label>
        <div class="form-group mb-3">
            <textarea name="socialmedia" id="" cols="30" rows="10"></textarea> 
        </div>
        
        <label for="name">Website</label>
        <div class="form-group mb-3">
            <input type="text" name="website" id="">
        </div>
        
        <label for="name">Can you help us promote Record Riots? Please explain.</label>
        <div class="form-group mb-3">
            <textarea name="help" id="" cols="30" rows="10"></textarea> 
        </div>

        <div class="form-group mb-3">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>